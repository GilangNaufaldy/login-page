import 'package:flutter/material.dart';

void main() {
  runApp(
      MaterialApp(
        debugShowCheckedModeBanner: false,
        home: LoginPage(),
      )
  );
}

class LoginPage extends StatelessWidget {
  const LoginPage({super.key});

  @override
  Widget build(BuildContext context) {
    TextEditingController username = TextEditingController();
    TextEditingController password = TextEditingController();
    return MaterialApp(
      theme: ThemeData(primarySwatch: Colors.primaries.first),
      debugShowCheckedModeBanner: false,
      title: "Halaman Login",
      home: Scaffold(
          backgroundColor: Colors.white,
          appBar: AppBar(
              leading: Icon(Icons.account_circle_sharp),
              title: Text("Login")
          ),
          body: SingleChildScrollView(
            child: Padding(
              padding: const EdgeInsets.all(20.0),
              child: Column(
                  mainAxisAlignment: MainAxisAlignment.center,
                  children: [
                    Image.network("https://cdn3d.iconscout.com/3d/free/thumb/free-instagram-4703914-3915166.png", height: 250),
                    Text(
                        "Login instagram",
                        style: TextStyle(
                            fontWeight: FontWeight.bold,
                            fontSize: 20,
                            color: Colors.primaries.first
                        )
                    ),
                    SizedBox(height: 20),
                    Text(
                        "ID & Pass : gilang",
                        style: TextStyle(
                            fontWeight: FontWeight.normal,
                            fontSize: 10,
                            color: Colors.black54
                        )
                    ),
                    SizedBox(height: 30),
                    TextField(
                        controller: username,
                        decoration: InputDecoration(
                            border: OutlineInputBorder(
                                borderRadius: BorderRadius.circular(25)
                            ),
                            labelText: "Username"
                        )
                    ),
                    SizedBox(height: 10),
                    TextField(
                        controller: password,
                        obscureText: true,
                        decoration: InputDecoration(
                            border: OutlineInputBorder(
                                borderRadius: BorderRadius.circular(25)
                            ),
                            labelText: "Kata sandi"
                        )
                    ),
                    SizedBox(height: 30),
                    ElevatedButton(
                        onPressed: () {
                          if (username.text == "gilang" && password.text == "gilang") {
                            Navigator.push(
                                context,
                                MaterialPageRoute(builder: (
                                        (context) => Page2()
                                )
                                )
                            );
                          }
                        },
                        style: ElevatedButton.styleFrom(
                            minimumSize: Size.fromHeight(55),
                            shape: RoundedRectangleBorder(borderRadius: BorderRadius.circular(20))
                        ),
                        child: Text("Masuk")
                    ),
                  ]
              ),
            ),
          )
      ),
    );
  }
}

class Page2 extends StatelessWidget {
  const Page2({super.key});

  @override
  Widget build(BuildContext context) {

    return MaterialApp(
      theme: ThemeData(primarySwatch: Colors.primaries.first),
      debugShowCheckedModeBanner: false,
      title: "Halaman Profile",
      home: Scaffold(
        backgroundColor: Colors.white,
        appBar: AppBar(
            leading: Icon(Icons.account_circle_sharp),
            title: Text("Profile")
        ),
        body: SingleChildScrollView(
          child: Padding(
            padding: const EdgeInsets.all(20),
            child: Column(
              // mainAxisAlignment: MainAxisAlignment.center,
              children: [
                Text("Nama : Gilang Naufaldy"),
                SizedBox(height: 20),
                Text("NIM : 124210035"),
                SizedBox(height: 80),
                ElevatedButton(
                    onPressed: () {
                      Navigator.push(
                          context,
                          MaterialPageRoute(
                              builder: (
                                      (context) => LoginPage()
                              )
                          )
                      );
                    },
                    style: ElevatedButton.styleFrom(
                        minimumSize: Size.fromHeight(50),
                        shape: RoundedRectangleBorder(borderRadius: BorderRadius.circular(25))
                    ),child : Text("Keluar")
                )
              ],
            ),
          ),
        ),
      ),
    );
  }
}
